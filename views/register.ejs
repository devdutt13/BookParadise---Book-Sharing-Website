<%- include("menu") -%>
<html>
    <head>
        <title>Register</title>
        <link rel="stylesheet" href="/css/rstyle.css">
    </head>
    <body>
       
            <div class="form1"> 
                <h1>Register</h1>
                <% if (message.length > 0) { %>
                <h2><%= message %></h2>
                <% } %>
                <form action="/register" method="POST">
                    <label for="name">Name</label>
                    <input type="text" name="name" required> 
                    <label for="username">Username</label>
                    <input type="email" name="username" placeholder="Email" required> 
                    <label for="password">Password</label>
                    <input type="password" name="password" required> 
                    <label for="cpassword">Confirm Password</label>
                    <input type="password" name="cpassword" required> 
                    <label for="phoneno">Phone Number</label>
                    <input type="tel" name="phoneno" pattern="[0-9]{10}" required> 
                    <label  for="TC"> <a href="/tc"><label  for="TC">Terms and Conditions </a></label>
                    <input type="checkbox" name="tc" value="Y" required>I Agree  
                    <button class="button1" type="submit" name="submit">Submit</button>
                    </form>
            </div>
        
    </body>
</html>