<%- include("menu") -%>
<html>
<head>
    <title><%= book.btitle %></title>
    <link rel="icon" type="image/png" sizes="16x16" href="public/images/favicon.png">
    <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-slate-700">

    <div class="bg-slate-200 mx-auto mt-20 font-serif w-3/5 flex">
          <form action="/rat/<%=book._id%>" method="POST" class=" mt-2 ml-6 flex-auto p-6">
            <div class="flex flex-wrap items-baseline">
              <h1 class="w-full flex-none mb-3 text-3xl leading-none text-slate-900 border-b border-slate-200">
                
                <%= book.btitle %>
              </h1>
             
              <div class="flex-auto text-lg font-medium text-slate-500 w-full">
              <i>
                <%= book.bauthor %>
              </i>
              </div>
              <div class="text-lg bg-zinc-500 uppercase text-justify text-gray-100 border border-gray-400 mt-1 pl-1 pr-1 inline-flex max-w-[25%]">
                <%= book.genre %>
              </div>
              <div class="flex-auto text-base text-justify leading-6 mt-2 font-medium text-slate-500 w-full">
                <%= book.bdes %>
              </div>
              <div class="flex-auto  leading-6 mt-2 font-medium text-slate-500 w-full">
                &starf; <%=rating %> (<%=num %>)
              </div>
            </div>
            <div class="flex items-baseline mt-4 mb-6 pb-6 border-b border-slate-200">
              <div class="space-x-1 flex text-sm font-medium">
                <label>
                  <input class="sr-only peer" name="rating" type="radio" value="1" checked />
                  <div class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 peer-checked:bg-slate-700 peer-checked:text-slate-100">
                    1
                  </div>
                </label>
                <label>
                  <input class="sr-only peer" name="rating" type="radio" value="2" />
                  <div class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 peer-checked:bg-slate-700 peer-checked:text-slate-100">
                    2
                  </div>
                </label>
                <label>
                  <input class="sr-only peer" name="rating" type="radio" value="3" />
                  <div class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 peer-checked:bg-slate-700 peer-checked:text-slate-100">
                    3
                  </div>
                </label>
                <label>
                  <input class="sr-only peer" name="rating" type="radio" value="4" />
                  <div class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 peer-checked:bg-slate-700 peer-checked:text-slate-100">
                    4
                  </div>
                </label>
                <label>
                  <input class="sr-only peer" name="rating" type="radio" value="5" />
                  <div class="w-7 h-7 rounded-full flex items-center justify-center text-slate-500 peer-checked:bg-slate-700 peer-checked:text-slate-100">
                    5
                  </div>
                </label>
                <label class="mr-6">
                  <button type="submit" name="submit" class="flex-none w-16 h-8 uppercase bg-gray-600 tracking-wider p-1 border border-black text-slate-100">
                    Rate
                  </button>
                </label>
                
              </div>
            </div>
            <div class="flex space-x-4 mb-5 text-sm font-medium">
              <div class="flex-auto flex space-x-4 pr-4">
                <button class="flex-none w-1/2 h-12 uppercase font-medium tracking-wider bg-slate-900 text-white">
                  <a href="/downld/<%=book.btitle%>">Download</a>
                </button>
              </div>
            </div>
          </form>
          <div class="flex-none mt-6 mr-6 mb-6 w-96 h-80 relative">
            <!-- Added a red border for troubleshooting -->
            <img src="/images/reading.jpg" alt="" class="inset-0 w-full h-full object-cover rounded-lg" loading="lazy" />
        </div>
    </div>
    
    <div class="bg-slate-200 mx-auto font-serif w-3/5 flex">
          <form action="/com/<%=book._id%>" method="POST" class=" mt-2 ml-6 flex-auto p-6">
            <div class="flex flex-wrap items-baseline">
              <h1 class="w-full flex-none mb-3 text-3xl leading-none text-slate-900 border-b border-slate-200">
                Add Comment
              </h1>
              <input type="text" name="ctitle" placeholder="Title"class="block border border-grey-light p-2 rounded leading-6 mb-1  text-slate-500 w-5/6">
              <textarea class="block border border-grey-light p-2  leading-6 mb-1 mr-2  text-slate-500 w-5/6 h-28" name="cbody" placeholder="Description  (Note: Anonymous Comments can be deleted by anyone) .."></textarea> 
              <button class="flex-none w-56 h-12 mt-2 font-medium tracking-wider bg-slate-900 text-white" type="submit" name="submit">Submit</button>
            </div>
          </form>
    </div>
    <div class="bg-slate-200 mx-auto font-serif w-3/5 flex">
      <div  class=" mt-2 ml-6 flex-auto p-6">
        <div class="flex flex-wrap items-baseline">
          <h1 class="w-full flex-none mb-3 text-3xl leading-none text-slate-900 border-b border-slate-200">
           Comments
          </h1>
          <%  comments.forEach(function(comment){ %>
                <h3 class="leading-6 mb-1 font-bold text-slate-700 w-4/5"><%=comment.title%></h3>
                <span class="mr-6"><i><%=comment.date%></i></span>
                <button><a href="/del/<%=book._id%>/<%=comment._id%>/<%=comment.author%>"><i style="font-size:18px;color:red" class="fa fa-trash-o"></i></a></button>
                <p class="text-base leading-6 text-justify mb-1 font-medium text-slate-700 w-4/5 block"><%=comment.comment%></p>
                <p class="text-slate-700 mr-2 mb-4 font-bold block w-1/5">
                  <i><%=comment.author%></i>
                </p>
           <% }) %>
    
        
        </div>
      </div>
    </div>

</body>

</html> 
